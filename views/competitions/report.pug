extends ../layout
include ../includes/_paginate

block content
  .container
    h1.main-title Reports Competitions

    table.table.table-hover
      thead
        tr
          th Title
          th
          th reason
          th
      tbody
        each competition in competitions
          tr
            td
              a(href=`/competitions/${competition._id}` style='color: brown')= competition.title
            td= competition.email
            td
            //- td= moment(competition.createdAt).format('YYYY-MM-DD HH:mm:ss')
            td
              a.btn.btn-sm.btn-outline-secondary(href=`/competitions/${competition._id}/edit`) 
                | #[i.fas.fa-edit] Edit
              | 
              a.btn.btn-sm.need-confirm-btn.btn-outline-danger(href=`/competitions/${competition._id}?_method=DELETE`)
                | #[i.fa.fa-trash] Delete


