          .row
            each competition in competitions.docs
              .col-lg-4.col-sm-8.portfolio-item
                .card.border.mb-3(style='max-width: 18rem;')
                  .card-header 
                    p.card-text(style=' font: bold italic 1em/1.0em 돋움체;')= competition.status          
                  .card-body
                    |                     
                    h6.card-title
                      a.title(href=`/competitions/${competition.id}`  style="color: brown")= competition.title
                    |                     
                    p.card-text= competition.location
                    hr
                    each tag in competition.tags
                      span.badge.badge-phill.badge-secondary= tag
    
