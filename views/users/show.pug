extends ../layout
include ../includes/_paginate

block content
  .container
    h1.main-title= users.name
    //- h1.main-title= user.name
          
    dl.row
      dt.col-sm-3 Email
      dd.col-sm-9
        a(href=`mailto:${users.email}`, style='color:black')= users.email

      dt.col-sm-3 address
      dd.col-sm-9
        a(href=`mailto:${users.address}`, style='color:black')= users.address
      dt.col-sm-3 sex
      dd.col-sm-9
        a(href=`mailto:${users.sex}`, style='color:black')= users.sex
      dt.col-sm-3 birthday
      dd.col-sm-9
        a(href=`mailto:${users.birthday}`, style='color:black')= users.birthday
      dt.col-sm-3 Created At
      dd.col-sm-9= users.createdAt
      
      if users.facebook.id
        dt.col-sm-3 Facebook
        dd.col-sm-9
          img.img-fluid.rounded-circle(src= users.facebook.photo)
      if users.kakaotalk.id
        dt.col-sm-3 kakaotalk
        dd.col-sm-9
          img.img-fluid.rounded-circle(src= users.kakaotalk.photo)
      if users.google.id
        dt.col-sm-3 google
        dd.col-sm-9
          img.img-fluid.rounded-circle(src= users.google.photo)

    hr
    p
      //- a.btn.btn-outline-secondary(href='/users/') List
      | 
      a.btn.btn-outline-primary(href=`/users/${users._id}/edit`) Edit
      | 
      a.btn.btn-outline-danger.need-confirm-btn(href=`/users/${users._id}?_method=DELETE`) Delete
      |
      br
